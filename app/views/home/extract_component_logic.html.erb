<div class="max-w-lg p-10 mx-auto">
  <div
    class="px-10 py-6 bg-gray-300 rounded"
    x-data="taskApp()"
  >
    <form
      @submit.prevent="submit"
    >
      <input
        type="text"
        placeholder="Go to the market..."
        x-model="newTask"
        class="w-full px-1 rounded"
      >
    </form>
    <ul class="mt-3 list-disc">
      <template
        x-for="(task, index) in tasks"
        :key="index"
      >
        <li>
          <input
            type="checkbox"
            x-model="task.completed"
          >
          <span
            x-text="task.body"
            :class="{ 'line-through' : task.completed }"
          ></span>
        </li>
      </template>
    </ul>
  </div>
</div>

