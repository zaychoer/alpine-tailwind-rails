<div class="grid items-center justify-center h-screen">
  <div x-data="{ show: true }">
    <div class="w-12 h-12">
      <div
        class="w-full h-full bg-green-400 rounded"
        x-show="show"
        x-transition:enter="transition transform duration-1000"
        x-transition:enter-start="opacity-0 scale-125"
        x-transition:enter-end="opacity-100 scale-100"
        x-transition:leave="transition duration-1000"
        x-transition:leave-start="opacity-100"
        x-transition:leave-end="opacity-0"
      >
      </div>
    </div>
    <button
      @click="show = ! show"
      class="px-2 my-2 border rounded focus:outline-none"
    >
      Toggle
    </button>
  </div>
</div>
