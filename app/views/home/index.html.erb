<h1 class="text-2xl font-bold text-gray-800">Alpine Memory Game</h1>
<div x-data="game()" class="relative flex items-center justify-center min-h-screen px-10">
  <h1 class="absolute top-0 right-0 p-10 text-3xl font-bold">
    <span x-text="points"></span>
    <span class="text-xs">pts</span>
  </h1>
  <div class="grid flex-1 grid-cols-4 gap-10">
    <template x-for="card in cards">
      <div>
        <button
          x-show="! card.cleared"
          :style="'background: ' + (card.flipped ? card.color : '#999')"
          class="w-full h-32 cursor-pointer"
          @click="flipCard(card)"
        >
        </button>
      </div>
    </template>
  </div>
</div>

<div
  x-data="{ show: false, message: 'Default message' }"
  x-show.transition.opacity="show"
  x-text="message"
  <%# x-on:flash.window="alert('caught!')" %>
  @flash.window="
    message = $event.detail.message;
    show = true;
    setTimeout(() => show = false, 1000)
  "
  class="fixed bottom-0 right-0 px-4 py-2 mb-4 mr-4 text-white bg-green-500 rounded"
>
</div>

<script>
  function pause(milliseconds = 1000){
    return new Promise(resolve => {setTimeout(resolve, milliseconds)})
    // return new Promise(function (resolve) {
    //   return setTimeout(resolve, milliseconds)
    // })
  }

  function flash(message) {
    window.dispatchEvent(new CustomEvent('flash', {
      detail: { message }
    }))
  }

  function game() {
    return {
      cards: [
        { color: 'green', flipped: false, cleared: false },
        { color: 'red', flipped: false, cleared: false },
        { color: 'blue', flipped: false, cleared: false },
        { color: 'yellow', flipped: false, cleared: false },
        { color: 'green', flipped: false, cleared: false },
        { color: 'red', flipped: false, cleared: false },
        { color: 'blue', flipped: false, cleared: false },
        { color: 'yellow', flipped: false, cleared: false },
      ],

      get flippedCards(){
        return this.cards.filter(card => card.flipped)
      },

      get clearedCards(){
        return this.cards.filter(card => card.cleared)
      },

      get remainingCards(){
        return this.cards.filter(card => ! card.cleared)
      },

      get points(){
        return this.clearedCards.length
      },

      async flipCard(card) {
        if (this.flippedCards.length === 2) {
          return
        }

        card.flipped = ! card.flipped

        if (this.flippedCards.length === 2) {
          if (this.hasMatch()) {
            flash('You found match')
            await pause()
            this.flippedCards.forEach(card => card.cleared = true)

            if (! this.remainingCards.length) {
              alert('You Won!')
            }
          }

          await pause()
          this.flippedCards.forEach(card => card.flipped = false )
        }
      },

      hasMatch(){
        return this.flippedCards[0]['color'] === this.flippedCards[1]['color']
      }
    }
  }
</script>
